# Environment Configuration for Email Services
# Copy this file to .env and update with your actual credentials

# =================================
# Email Service Configuration
# =================================

# Choose primary email service: brevo, nodemailer, auto
REACT_APP_EMAIL_SERVICE=auto

# =================================
# Brevo (Sendinblue) Configuration
# =================================

# Get your API key from: https://app.brevo.com/settings/keys/api
REACT_APP_BREVO_API_KEY=your_brevo_api_key_here

# SMTP credentials (optional, for Nodemailer with Brevo SMTP)
REACT_APP_BREVO_SMTP_USER=your_brevo_smtp_username
REACT_APP_BREVO_SMTP_PASSWORD=your_brevo_smtp_password

# =================================
# Gmail Configuration (for Nodemailer)
# =================================

# Gmail account for sending emails
REACT_APP_GMAIL_USER=your-gmail@gmail.com

# Gmail App Password (NOT your regular password)
# Generate at: https://myaccount.google.com/apppasswords
REACT_APP_GMAIL_APP_PASSWORD=your_16_digit_app_password

# =================================
# Outlook/Hotmail Configuration
# =================================

REACT_APP_OUTLOOK_USER=your-email@outlook.com
REACT_APP_OUTLOOK_PASSWORD=your_app_password

# =================================
# Custom SMTP Configuration
# =================================

REACT_APP_SMTP_HOST=smtp.your-provider.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_SECURE=false
REACT_APP_SMTP_USER=your_smtp_username
REACT_APP_SMTP_PASSWORD=your_smtp_password

# =================================
# General Email Settings
# =================================

# Sender information
REACT_APP_SENDER_NAME="Aapla Mahesh Team"
REACT_APP_SENDER_EMAIL=contact@aaplamahesh.org

# Admin email (where form submissions are sent)
REACT_APP_RECIPIENT_EMAIL=admin@aaplamahesh.org

# Test email (for testing email functionality)
REACT_APP_TEST_EMAIL=test@aaplamahesh.org

# Website URL (for email templates)
REACT_APP_WEBSITE_URL=https://aaplamahesh.org
